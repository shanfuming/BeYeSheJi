<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y40"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_rf_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:lines="1"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textColorHint="@color/divider"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/tv_rf_getCode"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y60"
            android:background="@drawable/round_white_gray"
            android:gravity="center"
            android:text="获取验证码"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="@dimen/x29" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y8"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_rf_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:lines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/divider"
            android:textSize="@dimen/x28" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y8"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_rf_pass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
            android:gravity="center_vertical"
            android:hint="请输入密码(请输入6-20位数字与字母的组合)"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="20"
            android:textColor="@color/black"
            android:textColorHint="@color/divider"
            android:textSize="@dimen/x28" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/tv_rf_regist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y98"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y100"
        android:background="@color/black"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="@dimen/x34" />

</LinearLayout>