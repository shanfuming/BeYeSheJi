<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y110"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/ll_title_back"
        android:layout_width="@dimen/x90"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/iv_title_function1"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y44"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/back"
            />
    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_title_logo"
        android:layout_width="@dimen/x138"
        android:layout_height="@dimen/y44"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x34"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:id="@+id/ll_title_function2"
        android:layout_width="@dimen/x80"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x20"
        android:gravity="center"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/iv_title_function2"
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/x44"
            android:clickable="true"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title_function2"
        android:layout_width="@dimen/x120"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x20"
        android:textSize="@dimen/x26"
        android:gravity="center"
        android:clickable="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/divider"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>